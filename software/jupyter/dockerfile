# Use an official Python runtime as a parent image
FROM python:3.11

# Install git
RUN apt-get update && apt-get install -y git

# Clone repository
RUN git clone https://github.com/interfacerproject/Interfacer-notebook.git /data

# Set the working directory to /app
WORKDIR /data

# Install Jupyter Notebook
RUN pip install --upgrade pip

RUN pip install notebook
RUN pip install requests
RUN pip install zenroom
RUN pip install plotly
RUN pip install Pillow
RUN pip install qrcode
RUN pip install pandas
RUN pip install dash  
RUN pip install dash-bootstrap-components
RUN pip install statsmodels
RUN pip install paho-mqtt


COPY example_notebooks/fchh-notebook ./fchh-notebook/
# or pip3 install requests , pip3 install -U zenroom --pre and pip3 install plotly if not using conda

# Make port 8000 available to the world outside this container
EXPOSE 8080

# Run Jupyter Notebook when the container launches
CMD ["jupyter", "notebook", "--ip=0.0.0.0", "--port=8080", "--no-browser", "--allow-root"]
